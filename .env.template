# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=development
APP_ENV=dev

# Theme Configuration (コーラルテーマ固定)
DEFAULT_THEME_COLOR=#FF7F50
DEFAULT_BACKGROUND_COLOR=#fdf8f0
THEME_NAME=coral

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://postgres:postgres_password@localhost:5433/bloomia_dev

# Redis Cache URL
REDIS_URL=redis://:redis_password@localhost:6379

# ===========================================
# AUTH0 CONFIGURATION (必須設定)
# ===========================================
# Auth0 Domain (例: your-tenant.auth0.com)
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.auth0.com

# Auth0 Application Settings
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=https://api.bloomia.com

# Next.js Auth0 Settings
AUTH0_SECRET=your-32-character-random-string-for-jwt-encryption
AUTH0_BASE_URL=http://localhost:3000

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URLs
API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8080
WEBSOCKET_URL=ws://localhost:8080/ws
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# Frontend URL
FRONTEND_URL=http://localhost:3000

# ===========================================
# SECURITY CONFIGURATION (必須設定)
# ===========================================
# Encryption key for sensitive data (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key-here

# JWT Secret (32+ characters)
JWT_SECRET=your-jwt-secret-key-for-backend-auth

# Session Secret (32+ characters)
SESSION_SECRET=your-session-secret-key-here

# ===========================================
# RAILWAY DEPLOYMENT (本番環境用)
# ===========================================
# Railway Storage Path
RAILWAY_STORAGE_PATH=/app/storage

# Server Port
PORT=8080

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_WHITEBOARD=true
ENABLE_NOTES=true
ENABLE_GAMIFICATION=true
CORAL_THEME_ONLY=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Database Settings for Development
POSTGRES_DB=bloomia_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

# Redis Settings for Development
REDIS_PASSWORD=redis_password

# ===========================================
# MONITORING & LOGGING
# ===========================================
# Log Level
LOG_LEVEL=info

# Enable Debug Mode
DEBUG=false