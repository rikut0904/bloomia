# ===========================================
# BLOOMIA - 中学校向け学習・公務支援システム
# 環境変数設定ファイル
# ===========================================

# ===========================================
# アプリケーション基本設定
# ===========================================
NODE_ENV=development
APP_ENV=dev

# テーマ設定（コーラルテーマ固定）
DEFAULT_THEME_COLOR="#FF7F50"
DEFAULT_BACKGROUND_COLOR="#fdf8f0"
THEME_NAME=coral

# ===========================================
# データベース設定
# ===========================================
# PostgreSQL データベースURL（統合形式）
DATABASE_URL=postgresql://postgres:password@localhost:5432/bloomia_dev

# Redis キャッシュURL
REDIS_URL=redis://localhost:6379

# ===========================================
# Firebase Auth設定（必須）
# ===========================================
# Firebase プロジェクト設定
FIREBASE_PROJECT_ID=your-project-id

# Firebase サービスアカウントキー（JSON形式）
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}

# Google Application Credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ===========================================
# フロントエンド Firebase設定（必須）
# ===========================================
# Firebase Web App設定
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# ===========================================
# API設定
# ===========================================
# バックエンドAPI URL
API_BASE_URL=http://localhost:8080
NEXT_PUBLIC_API_URL=http://localhost:8080

# WebSocket URL
WEBSOCKET_URL=ws://localhost:8080/ws
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# フロントエンドURL
FRONTEND_URL=http://localhost:3000

# ===========================================
# セキュリティ設定（必須）
# ===========================================
# 暗号化キー（32文字）
ENCRYPTION_KEY=your-32-character-encryption-key-here

# JWT シークレット（32文字以上）
JWT_SECRET=your-jwt-secret-key-for-backend-auth

# セッションシークレット（32文字以上）
SESSION_SECRET=your-session-secret-key-here

# ===========================================
# 機能フラグ
# ===========================================
# 機能の有効/無効設定
ENABLE_WHITEBOARD=true
ENABLE_NOTES=true
ENABLE_GAMIFICATION=true
CORAL_THEME_ONLY=true

# ===========================================
# 監視・ログ設定
# ===========================================
# ログレベル
LOG_LEVEL=info

# デバッグモード
DEBUG=false

# ===========================================
# Railway デプロイメント設定
# ===========================================
# サーバーポート
PORT=8080

# Railway ストレージパス
RAILWAY_STORAGE_PATH=/app/storage

# Database
POSTGRES_DB="railway"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="your_postgres_password"

# Redis
REDIS_PASSWORD="your_redis_password"
